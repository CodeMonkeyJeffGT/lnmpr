#!/bin/bash

cd `dirname $0`

../shell/checkinstalled redis
if [ -f ../data/redis ] ; then
    exit 1
fi

../shell/pkgexist redis

cd ../../redis
echo 安装\ redis

if [ $1 ] ; then
    loc=$1
else
    echo -n 请输入安装路径，默认为\ /env/redis/：
    read loc
    if [ ! $loc ] ; then
        loc=/env/redis/
    fi
fi

../build/shell/checkandsave $loc redis
